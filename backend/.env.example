# Backend environment variables - copy this file to .env and fill the values for your environment

# Server
PORT=5000
NODE_ENV=development

# Database (MySQL)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_db_password_here
DB_NAME=collservice

# SMTP (optional - for sending recovery emails)
# If you don't provide SMTP settings, the backend will return the code in the response in development (debugCode)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Coll Service <no-reply@example.com>"

# Optional: override frontend origin/CORS if needed
# FRONTEND_ORIGIN=http://localhost:5173
